<h3>Timeline</h3>

<table class="table striped">
  <thead>
    <tr>
      <th>Content source</th>
      <th>Content</th>
      <th>Person</th>
      <th>Abuse flag</th>
      <th>Content created at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.content_source %></td>
        <td><%= event.content %></td>
        <td><%= event.person %></td>
        <td><%= event.abuse_flag %></td>
        <td><%= event.content_created_at %></td>
        <td><%= link_to 'View Details', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Remove', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

